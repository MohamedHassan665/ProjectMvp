<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/book"
    tools:context=".ui.MainActivity">


    <Button
        android:id="@+id/Time"
        android:layout_width="140dp"
        android:layout_height="49dp"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/backgroundbutton"
        android:clickable="true"
        android:text="Time"
        app:backgroundTint="#4682b4"
        app:layout_constraintStart_toEndOf="@+id/Love"
        app:layout_constraintTop_toBottomOf="@+id/Live" />

    <Button
        android:id="@+id/Live"
        android:layout_width="140dp"
        android:layout_height="49dp"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/backgroundbutton"
        android:text="Live"
        app:backgroundTint="@android:color/holo_orange_light"
        app:layout_constraintStart_toEndOf="@+id/Sport"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Sport"
        android:layout_width="140dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/backgroundbutton"
        android:clickable="true"
        android:text="Sport"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button

        android:id="@+id/Love"
        android:layout_width="140dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/backgroundbutton"
        android:text="Love"
        app:backgroundTint="#20b2aa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Sport" />
</androidx.constraintlayout.widget.ConstraintLayout>